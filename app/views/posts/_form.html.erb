<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :title %>
    <%= f.text_field :title, autofocus: true, placeholder: "title"%>
  </div>
  <div class="field">
    <%= f.hidden_field :body %>
    <%= f.text_area :body, placeholder: "type your message" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
