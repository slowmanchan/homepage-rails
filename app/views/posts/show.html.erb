<div class="container light-blue-wrapper">
  <div class="wrapper">


    <div class="post-wrapper">
      <p class="date">submitted <%= time_ago_in_words(@post.created_at) %> ago</p>
      <h1><%= @post.title %></h1>
      <p class="body">
        <%= @post.body %>
      </p>
      <p>
        <% if current_user.try(:admin) %>
        | <%= link_to "edit", edit_post_path(@post) %>
        | <%= link_to "delete", post_path(@post), method: :delete, data: { confirm: "are you sure?"} %>
        <% end %>
      </p>
   </div>



  <div id="comments">

      <% if @post.comments.count == 1 %>
        <h1><%= @post.comments.count %> comment</h1>
      <% else %>
        <h1><%= @post.comments.count %> comments</h1>
      <% end %>

      <%= render @post.comments %>
      <h1>leave a comment</h1>
      <% if user_signed_in? %>
        <%= render  'comments/form' %>
      <% else %>
        <p><%= link_to "sign in", new_user_session_path %> to comment on this post</p>
      <% end %>

  </div>
</div>
</div>
